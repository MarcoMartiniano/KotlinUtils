<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Kotlin Utilities"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_countdowntime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Countdowntime"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/bt_flowlivedata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flows and LiveData"
        app:layout_constraintTop_toBottomOf="@id/bt_countdowntime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/bt_biometricauth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biometric Authentication"
        app:layout_constraintTop_toBottomOf="@id/bt_flowlivedata"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/bt_whatzup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whatzup"
        app:layout_constraintTop_toBottomOf="@id/bt_biometricauth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/bt_cryptography"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cryptography"
        app:layout_constraintTop_toBottomOf="@id/bt_whatzup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/bt_cameraX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CameraX"
        app:layout_constraintTop_toBottomOf="@id/bt_cryptography"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>