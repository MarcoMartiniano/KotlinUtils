<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cryptography.CryptographyActivity">

    <TextView
        android:id="@+id/tv_cryptography_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Cryptography"
        android:textSize="28sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edt_crypto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_cryptography_title"
        />

    <TextView
        android:id="@+id/tv_encryptography"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/edt_crypto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Encryptography"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/bt_encryptography"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encryptography"
        app:layout_constraintTop_toBottomOf="@id/tv_encryptography"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tv_decryptography"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/bt_encryptography"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Decryptography"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/bt_decryptography"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decryptography"
        app:layout_constraintTop_toBottomOf="@id/tv_decryptography"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>